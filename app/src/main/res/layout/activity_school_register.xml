<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBD"
    tools:context=".School.SchoolRegister">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#E4E4E4"
        android:padding="15dp">

        <TextView
            android:id="@+id/textview_school_register_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Please enter your details to Register on the app"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline">

        </TextView>

<!--        School Name-->
        <TextView
            android:id="@+id/text_view_school_register_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_school_register_head"
            android:layout_marginTop="10dp"
            android:text="School*"
            android:textColor="#555555"
            android:textSize="16sp">

        </TextView>

        <EditText
            android:id="@+id/editText_school_register_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_school_register_school_name"
            android:background="@drawable/border"
            android:hint="Enter School Name"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="6dp"
            android:textColor="#101010"
            android:textSize="16sp">

        </EditText>
<!--        Email-->

        <TextView
            android:id="@+id/text_view_school_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_school_register_school_name"
            android:layout_marginTop="10dp"
            android:text="Email*"
            android:textColor="#555555"
            android:textSize="16sp">

        </TextView>

        <EditText
            android:id="@+id/editText_school_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_school_register_email"
            android:background="@drawable/border"
            android:hint="Enter Parent's Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="6dp"
            android:textColor="#101010"
            android:textSize="16sp">

        </EditText>


<!--Pincode-->

        <TextView
            android:id="@+id/text_view_school_register_pincode."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_school_register_email"
            android:layout_marginTop="10dp"
            android:text="Pincode.*"
            android:textColor="#555555"
            android:textSize="16sp">

        </TextView>

        <EditText
            android:id="@+id/editText_school_register_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_school_register_pincode."
            android:background="@drawable/border"
            android:hint="Enter Student's Roll no."
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="6dp"
            android:textColor="#0E0E0E"
            android:textSize="16sp">

        </EditText>


        <TextView
            android:id="@+id/text_view_school_register_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_school_register_pincode"
            android:layout_marginTop="10dp"
            android:text="Mobile*"
            android:textColor="#555555"
            android:textSize="16sp">

        </TextView>

        <EditText
            android:id="@+id/editText_school_register_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_school_register_mobile"
            android:background="@drawable/border"
            android:hint="Enter Parent's mobile no(Without +91)"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="6dp"
            android:textColor="#0E0E0E"
            android:textSize="16sp">

        </EditText>
        <!--        Password-->
        <TextView
            android:id="@+id/text_view_school_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_school_register_mobile"
            android:layout_marginTop="10dp"
            android:text="Password*"
            android:textColor="#555555"
            android:textSize="16sp">

        </TextView>

        <EditText
            android:id="@+id/editText_school_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_school_register_password"
            android:background="@drawable/border"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="6dp"
            android:textColor="#040303"
            android:textSize="16sp">

        </EditText>

        <TextView
            android:id="@+id/text_view_school_register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_school_register_password"
            android:layout_marginTop="10dp"
            android:text="Confirm Password*"
            android:textColor="#555555"
            android:textSize="16sp">

        </TextView>

        <EditText
            android:id="@+id/editText_school_register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_school_register_confirm_password"
            android:background="@drawable/border"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="6dp"
            android:textColor="#151515"
            android:textSize="16sp">

        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_school_register"
            android:layout_below="@id/editText_school_register_confirm_password"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="122dp"
            android:layout_margin="70dp"
            android:text="Register">

        </Button>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone">

        </ProgressBar>

    </RelativeLayout>

</ScrollView>